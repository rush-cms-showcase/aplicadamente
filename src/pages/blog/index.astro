---
import RootLayout from '@/layouts/root-layout.astro'
import Container from '@/components/container.astro'
import { getEntries } from '@/lib/rush'

import type { CmsEntry } from '@/types/rush'

export const prerender = false // SSR

let posts: CmsEntry[] = []
try {
  // 14 is the Blog Collection ID
  const response = await getEntries(14)
  if (response?.data) {
    posts = response.data
  }
} catch (error) {
  console.error("Erro ao carregar os posts do blog:", error)
}
---

<RootLayout title="Blog | Aplicadamente">
  <div class="pt-40 max-lg:pt-48 pb-20 min-h-[65vh]">
    <Container class="max-w-4xl">
      <div class="mb-16">
        <h1 class="text-5xl lg:text-6xl font-black text-brand-blue mb-6 tracking-tight">Nosso Blog</h1>
        <p class="text-xl md:text-2xl text-slate-600 leading-relaxed">Acompanhe as Ãºltimas novidades, dicas e artigos.</p>
      </div>

      {posts.length === 0 ? (
        <div class="bg-brand-pink/5 border border-brand-pink/20 rounded-2xl p-12 text-center">
          <p class="text-slate-600 text-xl font-medium">Nenhum post publicado ainda. Volte em breve!</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <a href={`/blog/${post.slug}`} class="group flex flex-col bg-white border border-slate-200 rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-300">
              {post.featured_image ? (
                <div class="aspect-video w-full overflow-hidden bg-slate-100">
                  <img 
                    src={post.featured_image.url} 
                    alt={post.title} 
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" 
                  />
                </div>
              ) : (
                <div class="aspect-video w-full bg-brand-pink/10 flex items-center justify-center">
                  <span class="text-brand-pink font-medium">Ler Artigo</span>
                </div>
              )}
              <div class="p-6 flex-1 flex flex-col">
                <h2 class="text-xl font-bold text-brand-blue mb-3 group-hover:text-brand-pink transition-colors line-clamp-2">
                  {post.title}
                </h2>
                {post.excerpt && (
                  <p class="text-slate-600 text-sm line-clamp-3 mb-4 flex-1">
                    {post.excerpt}
                  </p>
                )}
                <div class="mt-auto text-brand-pink font-semibold text-sm flex items-center gap-2">
                  Ler completo
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover:translate-x-1 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      )}
    </Container>
  </div>
</RootLayout>
